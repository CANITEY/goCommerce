{{ define "adminPage" }}
<div class="row m-2">
<table class="table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">name</th>
      <th scope="col">price</th>
      <th scope="col">actions</th>
    </tr>
  </thead>
  <tbody>
      {{ range . }}
      <tr>
          <th scope="row">{{ .ID }}</th>
          <td>{{ .Name }}</td>
          <td>{{ .Price }} $</td>
          <td><a href="/admin/products/edit/{{ .ID }}"><button class="btn btn-primary">edit</button></a><a href="/admin/products/delete/{{ .ID }}"><button class="ms-2 btn btn-danger">delete</button></a></td>
      </tr>
      {{ end }}
  </tbody>
</table>
<a href="/admin/products/modify"><button class="btn btn-success">Add product</button></a>
</div>
{{ end }}
